
<Defs>
	<ThingDef ParentName="BaseDungeonTurret">
		<defName>Turret_Trebuchet</defName>
		<label>trebuchet turret</label>
		<description>A Ballista. Has a great stopping power and accuracy, but takes a long time to reload.</description>
		<size>(3,3)</size>
		<interactionCellOffset>(0,0,-2)</interactionCellOffset>
		<graphicData>
			<texPath>Things/Building/Trebuchet/TrebuchetBase</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(4,4)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Trebuchet/TrebuchetTop</uiIconPath>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.7</Flammability>
			<WorkToBuild>1800</WorkToBuild>
			<Mass>8</Mass>
			<Beauty>-20</Beauty>
			<ShootingAccuracyTurret>0.96</ShootingAccuracyTurret>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<WoodLog>150</WoodLog>
		</costList>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<modExtensions>
			<li Class="RimDungeon.Turret_Def">
				<firingArc>60</firingArc>
				<guns>
					<li>Weapon_TrebuchetSingle</li>
					<li>Weapon_TrebuchetMulti</li>
				</guns>
			</li>
		</modExtensions>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Security</designationCategory>
		<building>
			<combatPower>45</combatPower>
			<ai_combatDangerous>true</ai_combatDangerous>
			<turretGunDef>Weapon_TrebuchetSingle</turretGunDef>
			<turretBurstCooldownTime>5.01</turretBurstCooldownTime>
			<turretTopDrawSize>3</turretTopDrawSize>
		</building>
				<inspectorTabs>
			<li>ITab_Shells</li>
		</inspectorTabs>
		<researchPrerequisites>
			<li>GunTurrets</li>
		</researchPrerequisites>
	</ThingDef>
	
	<ThingDef Name="Weapon_Trebuchet"
        		ParentName="BaseWeaponTurret"
        		Abstract="True">
		<defName>Weapon_Trebuchet</defName>
		<label>Ballista Weapon</label>
		<description>A powerful bow made to be mounted on a ballista.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Trebuchet/TrebuchetTop</texPath>
		</graphicData>
		<building>
			<buildingTags>
				<li>Artillery</li>
			</buildingTags>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<comps>
			<li Class="CompProperties_ChangeableProjectile"/>
		</comps>
		<statBases>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
	</ThingDef>
	
	<ThingDef ParentName="Weapon_Trebuchet">
		<defName>Weapon_TrebuchetSingle</defName>
		<label>Armour Piercing Bolt</label>
		<statBases>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.96</AccuracyShort>
			<AccuracyMedium>0.96</AccuracyMedium>
			<AccuracyLong>0.96</AccuracyLong>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Trebuchet/TrebuchetTop</texPath>
		</graphicData>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<defaultProjectile>Projectile_RimDungeonStoneExplosive</defaultProjectile>
				<range>45.9</range>
				<forcedMissRadius>5</forcedMissRadius>
				<burstShotCount>1</burstShotCount>
				<soundCast>Stone_Release</soundCast>
				<consumeFuelPerShot>5</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Weapon_Trebuchet">
		<defName>Weapon_TrebuchetMulti</defName>
		<label>Multi-Shot Ammunition</label>
		<statBases>
			<AccuracyTouch>0.5</AccuracyTouch>
			<AccuracyShort>0.42</AccuracyShort>
			<AccuracyMedium>0.18</AccuracyMedium>
			<AccuracyLong>0.06</AccuracyLong>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Trebuchet/TrebuchetTop</texPath>
		</graphicData>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
				<defaultProjectile>Projectile_RimDungeonStoneSmall</defaultProjectile>
				<range>45.9</range>
				<forcedMissRadius>5</forcedMissRadius>
				<burstShotCount>1</burstShotCount>
				<soundCast>Stone_Release</soundCast>
				<consumeFuelPerShot>10</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
</Defs>