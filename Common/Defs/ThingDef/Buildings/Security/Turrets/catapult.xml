<Defs>
	<ThingDef ParentName="BaseDungeonTurret">
		<defName>CatapultTurret</defName>
		<label>catapult turret</label>
		<description>A Ballista. Has a great stopping power and accuracy, but takes a long time to reload.</description>
		<size>(2,2)</size>
		<graphicData>
			<texPath>Things/Building/Catapult/CatapultBase</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Catapult/CatapultTop</uiIconPath>
		<statBases>
			<MaxHitPoints>180</MaxHitPoints>
			<WorkToBuild>1800</WorkToBuild>
			<ShootingAccuracyTurret>0.98</ShootingAccuracyTurret>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>100</costStuffCount>
		<costList>
			<WoodLog>50</WoodLog>
		</costList>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<modExtensions>
			<li Class="RimDungeon.Turret_Def">
				<guns>
					<li>Weapon_CatapultSingle</li>
					<li>Weapon_CatapultMulti</li>
				</guns>
				<firingArc>90</firingArc>
			</li>
		</modExtensions>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelLabel>Bolts until rearm</fuelLabel>
				<fuelGizmoLabel>Wooden Bolts</fuelGizmoLabel>
				<outOfFuelMessage>Cannot shoot: No wood for bolts</outOfFuelMessage>
				<fuelFilter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</fuelFilter>
				<fuelCapacity>100</fuelCapacity>
				<fuelMultiplier>1</fuelMultiplier>
				<initialFuelPercent>1</initialFuelPercent>
				<autoRefuelPercent>0.25</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<minimumFueledThreshold>1</minimumFueledThreshold>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
			</li>
		</comps>
		<building>
			<turretGunDef>Weapon_CatapultSingle</turretGunDef>
			<turretBurstCooldownTime>8</turretBurstCooldownTime>
			<turretTopDrawSize>3</turretTopDrawSize>
		</building>
	<researchPrerequisites>
      <li>GunTurrets</li>
    </researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="BaseBullet">
		<defName>Projectile_CatapultSingle</defName>
		<label>single shot catapult</label>
		<graphicData>
			<texPath>Things/Projectile/Stone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<modExtensions>
			<li Class="RimDungeon.Projectile_Def">
				<shotCount>1</shotCount>
			</li>
		</modExtensions>
		<projectile>
			<damageDef>Bomb</damageDef>
			<damageAmountBase>100</damageAmountBase>
			<explosionRadius>1.5</explosionRadius>
			<armorPenetrationBase>0.5</armorPenetrationBase>
			<stoppingPower>2.5</stoppingPower>
			<speed>75</speed>
		</projectile>
	</ThingDef>
	
	<ThingDef ParentName="BaseBullet">
		<defName>Projectile_CatapultMulti</defName>
		<label>multi shot catapult</label>
		<graphicData>
			<texPath>Things/Projectile/Stone</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<thingCategories>
			<li>WeaponsRanged</li>
		</thingCategories>
		<modExtensions>
			<li Class="RimDungeon.Projectile_Def">
				<shotCount>10</shotCount>
			</li>
		</modExtensions>
		<projectile>
			<damageDef>Bomb</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<explosionRadius>0.5</explosionRadius>
			<armorPenetrationBase>0.5</armorPenetrationBase>
			<stoppingPower>2.5</stoppingPower>
			<speed>75</speed>
		</projectile>
	</ThingDef>
	
	<ThingDef Name="Weapon_Catapult"
        		ParentName="BaseWeaponTurret"
        		Abstract="True">
		<description>A powerful bow made to be mounted on a ballista.</description>
		<statBases>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
	</ThingDef>
	
	<ThingDef ParentName="Weapon_Catapult">
		<defName>Weapon_CatapultSingle</defName>
		<label>Armour Piercing Bolt</label>
		<statBases>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.96</AccuracyShort>
			<AccuracyMedium>0.96</AccuracyMedium>
			<AccuracyLong>0.96</AccuracyLong>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Catapult/CatapultTop</texPath>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<ticksBetweenBurstShots>0</ticksBetweenBurstShots>
				<defaultProjectile>Projectile_CatapultSingle</defaultProjectile>
				<range>45.9</range>
				<forcedMissRadius>5</forcedMissRadius>
				<burstShotCount>1</burstShotCount>
				<soundCast>Ballista_Release</soundCast>
				<consumeFuelPerShot>5</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	<ThingDef ParentName="Weapon_Catapult">
		<defName>Weapon_CatapultMulti</defName>
		<label>Multi-Shot Ammunition</label>
		<statBases>
			<AccuracyTouch>0.5</AccuracyTouch>
			<AccuracyShort>0.42</AccuracyShort>
			<AccuracyMedium>0.18</AccuracyMedium>
			<AccuracyLong>0.06</AccuracyLong>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Catapult/CatapultTop</texPath>
			<drawSize>(5,5)</drawSize>
		</graphicData>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
				<defaultProjectile>Projectile_CatapultMulti</defaultProjectile>
				<range>45.9</range>
				<forcedMissRadius>5</forcedMissRadius>
				<burstShotCount>1</burstShotCount>
				<soundCast>Ballista_Release</soundCast>
				<consumeFuelPerShot>10</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
</Defs>