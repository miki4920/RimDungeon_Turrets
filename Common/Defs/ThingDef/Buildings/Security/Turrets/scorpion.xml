<Defs>
	<ThingDef ParentName="BaseDungeonTurret">
		<defName>Turret_Scorpion</defName>
		<label>scorpion turret</label>
		<description>A Ballista. Has a great stopping power and accuracy, but takes a long time to reload.</description>
		<size>(1,1)</size>
		<graphicData>
			<texPath>Things/Building/Ballista/BallistaBase</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1,1)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Ballista/BallistaTop</uiIconPath>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.7</Flammability>
			<WorkToBuild>1800</WorkToBuild>
			<Mass>8</Mass>
			<Beauty>-20</Beauty>
			<ShootingAccuracyTurret>0.99</ShootingAccuracyTurret>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<costList>
			<WoodLog>100</WoodLog>
		</costList>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
		<modExtensions>
			<li Class="RimDungeon.Turret_Def">
				<guns>
					<li>Weapon_ScorpionSingle</li>
				</guns>
				<firingArc>120</firingArc>
			</li>
		</modExtensions>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelLabel>Bolts until rearm</fuelLabel>
				<fuelGizmoLabel>Wooden Bolts</fuelGizmoLabel>
				<outOfFuelMessage>Cannot shoot: No wood for bolts</outOfFuelMessage>
				<fuelFilter>
					<thingDefs>
						<li>WoodLog</li>
					</thingDefs>
				</fuelFilter>
				<fuelCapacity>100</fuelCapacity>
				<fuelMultiplier>1</fuelMultiplier>
				<initialFuelPercent>1</initialFuelPercent>
				<autoRefuelPercent>0.25</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<minimumFueledThreshold>1</minimumFueledThreshold>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<fuelIconPath>UI/Overlays/Barrel</fuelIconPath>
			</li>
		</comps>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Security</designationCategory>
		<building>
			<combatPower>45</combatPower>
			<ai_combatDangerous>true</ai_combatDangerous>
			<turretGunDef>Weapon_ScorpionSingle</turretGunDef>
			<turretBurstCooldownTime>1</turretBurstCooldownTime>
			<turretTopDrawSize>1.5</turretTopDrawSize>
		</building>
	<researchPrerequisites>
      <li>GunTurrets</li>
    </researchPrerequisites>
	</ThingDef>
	
	<ThingDef ParentName="BaseBullet">
		<defName>Projectile_ScorpionSingle</defName>
		<label>single shot scorpion</label>
		<graphicData>
			<texPath>Things/Projectile/Pilum</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>WeaponsRanged</li>
		</thingCategories>
		<modExtensions>
			<li Class="RimDungeon.Projectile_Def">
				<shotCount>1</shotCount>
			</li>
		</modExtensions>
		<projectile>
			<damageDef>ArrowHighVelocity</damageDef>
			<damageAmountBase>10</damageAmountBase>
			<armorPenetrationBase>0.1</armorPenetrationBase>
			<stoppingPower>0.5</stoppingPower>
			<speed>50</speed>
		</projectile>
	</ThingDef>
	<ThingDef ParentName="Weapon_Ballista">
		<defName>Weapon_ScorpionSingle</defName>
		<label>Single-Shot Ammunition</label>
		<statBases>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.96</AccuracyShort>
			<AccuracyMedium>0.96</AccuracyMedium>
			<AccuracyLong>0.96</AccuracyLong>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<ticksBetweenBurstShots>20</ticksBetweenBurstShots>
				<defaultProjectile>Projectile_ScorpionSingle</defaultProjectile>
				<range>28.9</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>Ballista_Release</soundCast>
				<consumeFuelPerShot>1</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
	</Defs>